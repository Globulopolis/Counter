{% extends "admin.twig" %}
{% block notification %}{% endblock %}

{% block content %}

<style type="text/css" media="all">
	@import url("plugins/Counter/assets/css/style.css");
</style>
<script type="text/javascript" src="plugins/Counter/assets/js/minicolors.min.js"></script>
